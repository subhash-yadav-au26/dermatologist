{{>loginhead}}
{{#if msg}}
    <div class="alert alert-warning" role="alert">
        {{msg}}
    </div>
{{/if}}
<div class="wrapper" style="display: flex;
justify-content: center;">
    <div class="form-container">
        <h1>Login</h1>
        <form action="/admin/login" method="post">
            <div class="il-wrapper">
                <input type="email" id="email" class="input" name="email" placeholder="username111@gmail.com" required autocomplete="off">
                <input type="password" id="password" class="input" name="password" placeholder="Enter Password"
                    required autocomplete="off">
                <button class="button" type="submit">Login</button>
            </div>
            <div class="forget">
                <a href="#">Forget Password</a>
                <a href="/user/signup" class="link">Sign Up</a>
            </div>
        </form>
    </div>
</div>